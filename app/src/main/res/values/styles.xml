<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/moins_jaune</item>
        <item name="colorControlActivated">@color/jaune</item>
    </style>

    <style name="NewAppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="colorControlNormal">@color/bleu</item>

    </style>


    <style
        name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item
            name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style
        name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item
            name="android:background">#FF0000
        </item>
        <item
            name="android:backgroundSplit">#FF0000
        </item>
    </style>

</resources>
